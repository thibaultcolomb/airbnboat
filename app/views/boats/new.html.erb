<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new boat</h3>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name %>
          <%= f.input :port %>
          <%= f.input :capacity %>
          <%= f.input :type %>
          <%= f.input :price_per_day %>
          <%= f.input :license %>
          <%= f.input :description %>
          <%= f.input :image %>

          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
