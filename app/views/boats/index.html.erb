<div class="main mt-3">
<h2>Browse boats:</h2>

<%# Map %>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

  <div class ="boats">
    <div class ="cards ">
    <% @boats.each do |boat| %>
    <div class="card-trip" >
            <% if boat.photos.first.nil? %>
              <img src="https://res.cloudinary.com/dzkglhdat/image/upload/v1706697996/no_image_b97fcc.png" alt="no_img">
            <% else %>
              <%= cl_image_tag(boat.photos.first.key, height: 200, crop: :fill) %>
            <% end  %>
            <div class="card-trip-infos">
              <div>
                <h3><%= boat.name %></h3>
                <div class ="card-trip-port-capacity">
                  <div><p><%= boat.port %></p></div>
                  <div><p><%= boat.capacity %></p></div>
                  <div><%= link_to "View boat", boat_path(boat) %></div>
                </div>
              </div>
              <h2 class="card-trip-pricing"><%= boat.price_per_day %></h2>
            </div>
      </div>
      <% end %>
    </div>
  </div>
 </div>
