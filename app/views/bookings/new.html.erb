  <div class="row justify-content-center mt-3">
    <div class="col-6">
      <h2 class="mb-3">Booking Request for <i><%= @boat.name %></i></h2>
      <%= simple_form_for [@boat, @booking] do |f| %>
      <%= f.input :start_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>

      <%= f.input :end_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>

      <%= f.submit "Submit", class: 'btn btn-primary' %>


      <% end %>
      <%= link_to "Back to Boats", root_path, class: "btn btn-secondary mt-5" %>
    </div>
  </div>
